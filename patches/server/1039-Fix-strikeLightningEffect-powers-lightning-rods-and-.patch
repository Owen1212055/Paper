@@ -86,7 +87,7 @@ public class LightningBolt extends Entity {
     @Override
     public void tick() {
         super.tick();
-        if (!this.isSilent && this.life == 2) { // Spigot
+        if (!this.isEffect && !this.isSilent && this.life == 2) { // Spigot // Paper
